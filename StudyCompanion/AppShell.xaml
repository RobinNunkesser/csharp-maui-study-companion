<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudyCompanion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudyCompanion"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="{local:Localize Mensa}" Icon="mensa">
            <ShellContent ContentTemplate="{DataTemplate local:MensaPage}" />
        </Tab>
        <Tab Title="{local:Localize Quiz}" Icon="quiz">
            <ShellContent ContentTemplate="{DataTemplate local:QuizPage}" />
        </Tab>
        <Tab Title="{local:Localize Courses}" Icon="courses">
            <ShellContent ContentTemplate="{DataTemplate local:CoursesPage}" />
        </Tab>
        <Tab Title="{local:Localize Profs}" Icon="profs">
            <ShellContent ContentTemplate="{DataTemplate local:ProfsPage}" />
        </Tab>
        <Tab Title="{local:Localize Settings}" Icon="settings">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>

